# bindsym $mod+Shift+Right resize shrink width 1 px or 1 ppt
# bindsym $mod+Shift+Up resize grow height 1 px or 1 ppt
# bindsym $mod+Shift+Down resize shrink height 1 px or 1 ppt
# bindsym $mod+Shift+Left resize grow width 1 px or 1 ppt


# My Custom Config
bindsym $mod+Control+l resize grow right 1 px or 1 ppt
bindsym $mod+Control+k resize grow up 1 px or 1 ppt
bindsym $mod+Control+j resize grow down 1 px or 1 ppt
bindsym $mod+Control+h resize grow left 1 px or 1 ppt

bindsym $mod+Alt+l resize shrink left 1 px or 1 ppt
bindsym $mod+Alt+k resize shrink down 1 px or 1 ppt
bindsym $mod+Alt+j resize shrink up 1 px or 1 ppt
bindsym $mod+Alt+h resize shrink right 1 px or 1 ppt

bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume 0 -3%
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume 0 +3%


bindsym XF86AudioPlay exec playerctl play-pause
bindsym $mod+Shift+Space exec playerctl play-pause
bindsym $mod+Shift+Right exec playerctl next
bindsym $mod+Shift+Left exec playerctl previous
bindsym XF86AudioMute exec amixer set Master toggle

bindsym Print exec grimshot save screen
bindsym Shift+Print exec grimshot savecopy area

bindsym $mod+e exec thunar

bindsym $mod+Tab exec focus output right
bindsym $mod+Shift+Tab exec focus output left
